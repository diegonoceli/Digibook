<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="victorrezende.digibook.MainActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/img1"
        android:layout_above="@+id/divisor"
        android:padding="6dp"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img1"
        android:padding="6dp"
        android:layout_below="@+id/divisor"
        android:layout_alignStart="@+id/divisor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/divisor"
        android:layout_toStartOf="@+id/img3"
        android:src="@drawable/img2"
        android:layout_toLeftOf="@+id/divisor"
        android:padding="6dp"
        android:layout_alignBottom="@+id/img3" />

    <View
        android:id="@+id/divisor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tv1"
        android:layout_below="@+id/img1"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv2"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:layout_alignTop="@+id/tv3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/img2"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv3"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="38dp"
        android:layout_alignBottom="@+id/img3"
        android:layout_alignEnd="@+id/img3"
        android:layout_toEndOf="@+id/divisor"
        android:textSize="35dp" />

</RelativeLayout>
